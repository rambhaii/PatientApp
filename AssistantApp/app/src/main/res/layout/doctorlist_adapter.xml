<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lifirst"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:background="@drawable/rectbackgra"
         android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_70sdp"
                android:padding="@dimen/_10sdp"
                android:id="@+id/doctoeimage"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/customer_support"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_28sdp"
                    android:text="Dr. John Riley"
                    android:id="@+id/doctoeid"
                    android:singleLine="true"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="left"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:visibility="gone"
                     android:layout_height="wrap_content"
                    android:text="service_name"
                    android:id="@+id/service_name"
                    android:singleLine="true"
                     android:drawablePadding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="left"
                    android:textSize="@dimen/_12sdp" />

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="service_name"
         android:id="@+id/tv_email"
         android:singleLine="true"
         android:drawablePadding="@dimen/_10sdp"
         android:textColor="@color/black"
         android:fontFamily="@font/proximanovaregular"
         android:gravity="right"
         android:layout_marginRight="@dimen/_7sdp"
         android:padding="@dimen/_5sdp"
          android:textSize="@dimen/_12sdp" />

    <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="service_name"
         android:id="@+id/blood_group"
        android:layout_alignParentRight="true"
         android:singleLine="true"
        android:layout_gravity="right"
         android:drawablePadding="@dimen/_10sdp"
         android:textColor="@color/green"
         android:fontFamily="@font/proximanovaregular"
         android:gravity="right"
         android:layout_marginRight="@dimen/_7sdp"
         android:padding="@dimen/_5sdp"
         android:textStyle="bold"
         android:textSize="@dimen/_12sdp" />


 </RelativeLayout>











                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:layout_alignParentRight="true"
                    android:numStars="5"
                    android:stepSize="5"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:isIndicator="true"
                    style="?android:attr/ratingBarStyleSmall" />


            </LinearLayout>


        </LinearLayout>





        <TextView
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/nav_location"
            android:drawableTint="@color/light_grey"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Lorem ipsum dolor sit amet, ad qui mazim oporteat
apeirian. Necaugue contentiones cu."
            android:id="@+id/address"
            android:textColor="@color/black"
            android:maxLines="3"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="left"
            android:textSize="@dimen/_12sdp" />



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/_10sdp"
     android:layout_height="wrap_content"
     >

    <Button
        android:id="@+id/id_chatnow"
        style="@android:style/Widget.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_28sdp"
        android:background="@drawable/rectnew"
        android:backgroundTint="@color/colorBackground"
        android:text="    Chat    "
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/proximanovaregular"
         android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/idCardView"
        android:layout_alignParentRight="true"
        style="@android:style/Widget.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_28sdp"
        android:background="@drawable/rectnew"
        android:text="    Book    "
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/proximanovaregular"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/white"
        android:textSize="14sp" />



</RelativeLayout>






    </LinearLayout>





</LinearLayout>