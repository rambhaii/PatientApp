<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            android:id="@+id/idCardView"
            android:layout_margin="@dimen/_1sdp"
            android:background="@drawable/rectbacknew"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <ImageView
                    android:layout_width="@dimen/_52sdp"
                    android:visibility="gone"
                    android:padding="@dimen/_7sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/opImage"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@drawable/customer_support" />


                <View
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:background="@color/back_bg"
                    android:layout_height="@dimen/_1sdp"/>


                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:maxLines="2"
                    android:text="5858558585855855855"
                    android:fontFamily="@font/proximanovaregular"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/tv_discuraption"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:text="5858558585855855855"
                    android:fontFamily="@font/proximanovaregular"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="12dp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="@dimen/_150sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_height="wrap_content">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rect"
                            android:padding="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="5dp">


                            <EditText
                                android:focusable="false"
                                android:id="@+id/datecrate"
                                android:drawableTint="@color/lohoyint"
                                android:drawablePadding="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_15sdp"
                                android:background="@android:color/transparent"
                                android:singleLine="true"
                                android:gravity="center"
                                android:clickable="false"
                                android:hint="Select Date"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/black" />


                        </RelativeLayout>

                    </RelativeLayout>

                    <Button
                        android:id="@+id/bookcontinew"
                         android:layout_alignParentRight="true"
                        style="@android:style/Widget.Button.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_28sdp"
                        android:background="@drawable/rectnew"
                        android:text="    Book    "
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/proximanovaregular"
                        android:backgroundTint="@color/button_color"
                        android:textColor="@color/white"
                        android:textSize="14sp" />




                </RelativeLayout>





            </LinearLayout>

            <TextView
                android:id="@+id/craetedate"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:text="5858558585855855855"
                android:fontFamily="@font/proximanovaregular"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="12dp"/>

        </RelativeLayout>







    </RelativeLayout>



</LinearLayout>