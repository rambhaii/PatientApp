<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.doc24x7.assistant.DoctorDashboad.SchedulingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/greengradiant"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tittel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="Set Availability"
            android:textColor="@color/red"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/detailuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/piclayout"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_2sdp"
                app:srcCompat="@drawable/operator_circle">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/userpic"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/customer_support"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="1dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@+id/Logout"
                android:layout_toRightOf="@+id/piclayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_28sdp"
                    android:fontFamily="serif"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="name name name name  "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contentnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="serif"
                    android:gravity="left"
                    android:text=" 85858588 "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/Logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="  Logout  "
                    android:textColor="@color/red"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />


            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tittel"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:text="Offline Availability Details"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/add_new"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/gradient"
                    android:textColor="@color/white"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"

                    android:layout_marginBottom="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text="Add Schedule"
                    android:layout_gravity="end"/>
                <TextView
                    android:id="@+id/set_Leave"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:background="@drawable/gradient"
                    android:textColor="@color/white"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginRight="5dp"
                    android:text="Set Leave"
                    android:layout_gravity="end"/>
                <TextView
                    android:id="@+id/show_leave"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/gradient"
                    android:textColor="@color/white"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginRight="5dp"
                    android:text="Show Leave"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:weightSum="7">

                <TextView
                    android:id="@+id/mon"

                    android:layout_width="0dp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:textColor="@color/white"
                    android:background="@drawable/rect_blue"
                    android:text="Mon"></TextView>

                <TextView
                    android:id="@+id/tue"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@drawable/rect"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tue"></TextView>

                <TextView
                    android:id="@+id/wed"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@drawable/rect"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wed"></TextView>

                <TextView
                    android:id="@+id/thurs"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@drawable/rect"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thurs"></TextView>

                <TextView
                    android:id="@+id/fri"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@drawable/rect"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fri"></TextView>

                <TextView
                    android:id="@+id/sat"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@drawable/rect"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sat"></TextView>

                <TextView
                    android:id="@+id/sun"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/rect"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sun"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <TextView
                    android:id="@+id/selectedAll"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:background="@color/yallow"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text=" Select All "></TextView>
                <TextView
                    android:id="@+id/deleteselected"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:background="@color/green"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="@dimen/_3sdp"
                    android:visibility="visible"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text=" Delete Selected "></TextView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:scrollbars="vertical"
                tools:context="example.javatpoint.com.recyclerviewlist.MainActivity" />


        </LinearLayout>


    </RelativeLayout>


</FrameLayout>