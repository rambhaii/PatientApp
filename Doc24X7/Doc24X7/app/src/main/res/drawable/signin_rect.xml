<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list android:layout_width="wrap_content" android:layout_height="wrap_content">
            <item android:right="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#dad6d6" />
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape>
                    <gradient android:angle="270" android:endColor="#fff" android:startColor="#fff" />
                    <stroke android:width="1dp" android:color="#e2dcdc" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
