<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>


    <LinearLayout
        android:id="@+id/lifirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="@drawable/rectbackgra"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/opImage"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/customer_support" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_28sdp"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Dr. John Riley"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/specialities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="service_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/qualification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/proximanovaregular"
                        android:gravity="right"
                        android:padding="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="service_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/blood_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/proximanovaregular"
                        android:gravity="right"
                        android:padding="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/green"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />


                </RelativeLayout>


                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="3.5"
                    android:stepSize="5" />


            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:drawableLeft="@drawable/nav_location"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableTint="@color/light_grey"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="left"
            android:maxLines="3"
            android:text="Lorem ipsum dolor sit amet, ad qui mazim oporteat
apeirian. Necaugue contentiones cu."
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />


    </LinearLayout>


    <LinearLayout
        android:layout_margin="7dp"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/rect"
        android:padding="10dp"
        android:visibility="gone"
         android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





        <TextView
            android:layout_marginRight="5dp"
            android:drawableTint="@color/back_bg"
            android:drawablePadding="@dimen/_10sdp"
            android:id="@+id/PackageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08/05/18 4:31 PM"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <TextView
            android:layout_marginRight="5dp"
            android:id="@+id/amount"
            android:drawableTint="@color/back_bg"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:drawablePadding="@dimen/_10sdp"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08/05/18 4:31 PM"
            android:textColor="#000000"
            android:textSize="15dp"/>


  <TextView
            android:layout_marginRight="5dp"
            android:id="@+id/tvcredit"
            android:drawableTint="@color/back_bg"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:drawablePadding="@dimen/_10sdp"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08/05/18 4:31 PM"
            android:textColor="#000000"
            android:textSize="15dp"/>




    </LinearLayout>


    <RelativeLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_35sdp"
        android:id="@+id/btn_pay"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorPrimary"
         android:background="@drawable/rectcolour">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay Now"
             android:padding="@dimen/_5sdp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>







</LinearLayout>