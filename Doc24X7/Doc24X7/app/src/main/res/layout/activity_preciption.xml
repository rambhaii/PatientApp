<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:scaleType="fitXY"
    android:src="@drawable/header"/>

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:visibility="invisible" />
<ImageView
    android:id="@+id/share"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:src="@drawable/ic_share_black_24dp"/>
        <ImageView
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/share"
            android:src="@drawable/download"/>
        <RelativeLayout
            android:id="@+id/lklkl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/clinic_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:text="5858558585855855855"
                    android:textColor="@color/blue"
                    android:textSize="21dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/registrarionNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="5858558585855855855"
                    android:textColor="@color/background"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="5858558585855855855"
                    android:textColor="@color/background"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="5858558585855855855"
                    android:textColor="@color/background"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="5858558585855855855"
                    android:textColor="@color/background"
                    android:textSize="14dp" />


            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/Preciption_imgss"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/lklkl"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/rnd_new" />

        <LinearLayout
            android:id="@+id/ll_patientdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Preciption_imgss"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="left"
            android:orientation="vertical">


            <TextView
                android:id="@+id/Patientname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/proximanovaregular"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/background"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/Patinetmobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/proximanovaregular"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="sdas"

                android:textStyle="bold"
                android:textColor="@color/background"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/bookdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/proximanovaregular"
                android:gravity="center_vertical"
                android:maxLines="1"

                android:textStyle="bold"
                android:text="5858558585855855855"
                android:textColor="@color/background"
                android:textSize="14dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/red_btn_bg_color" />

        </LinearLayout>

        <TextView
            android:id="@+id/Preciption_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_patientdetail"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/proximanovaregular"

            android:gravity="center_vertical"
            android:text="thisdiasd lksjlSJ"

            android:textColor="#343434"
            android:textSize="15dp" />

        <com.zolad.zoominimageview.ZoomInImageView
            android:id="@+id/Preciption_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_290sdp"
            android:layout_below="@+id/Preciption_description"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/_10sdp"

            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/splashimg" />
        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_btn_bg_color"
            android:padding="@dimen/_3sdp"
            android:layout_below="@+id/Preciption_description"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"

                android:textStyle="bold"
                android:text="S.No  "/>

            <TextView
                android:id="@+id/medicineName"
                android:layout_width="0dp"
                android:text="Me. Name"
                android:textSize="12sp"

                android:textStyle="bold"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/medicineFrequency"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:text="Frequency"

                android:textStyle="bold"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/medicinedays"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text="Days"

                android:textStyle="bold"
                android:layout_weight=".5" />

            <TextView
                android:id="@+id/medicineHowtouse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="How to use"
                android:textSize="12sp"

                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/a"
                android:layout_width="0dp"
                android:text="When to use"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/recycler_view_Preciption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/checkoutlayout"
            android:layout_below="@+id/title"
            android:layout_marginTop="@dimen/_10sdp"
            android:nestedScrollingEnabled="false"
            android:padding="@dimen/_10sdp"
            android:scrollbars="vertical" />


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/rnd_new"
            android:tint="@color/white" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/customerimage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/rnd_new"
            android:visibility="gone"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />

    </RelativeLayout>
</ScrollView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:src="@drawable/footer"></ImageView>
    <TextView
        android:id="@+id/bteditprescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/rect_blue"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:text="Edit Prescription"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textSize="15dp" />
</RelativeLayout>