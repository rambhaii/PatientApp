<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ShowleaveActivity">

    <RelativeLayout
        android:id="@+id/detailuser"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/_2sdp"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/piclayout"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_2sdp"
            app:srcCompat="@drawable/operator_circle">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/userpic"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/customer_support"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_9sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/Logout"
            android:layout_toRightOf="@+id/piclayout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_28sdp"
                android:fontFamily="serif"
                android:gravity="left"
                android:singleLine="true"
                android:text="name name name name  "
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contentnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="serif"
                android:gravity="left"
                android:text=" 85858588 "
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="left"
                android:singleLine="true"
                android:text="  Logout  "
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/backkkk" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Show Leave"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
       android:layout_width="match_parent"
       android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
       android:layout_height="wrap_content"
       android:orientation="horizontal">


            <RadioButton
                android:layout_width="wrap_content"
                android:gravity="center"
                android:id="@+id/rad_show_date_leave"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>

            <TextView
           android:id="@+id/show_date_leave"
           android:layout_width="wrap_content"
           android:layout_marginLeft="@dimen/_2sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
           android:layout_height="wrap_content"
            android:textColor="@color/black"
           android:padding="@dimen/_2sdp"
           android:gravity="center"
            android:layout_marginRight="5dp"
           android:text="  Date Leave"
            />

   </LinearLayout>

        <LinearLayout
       android:layout_width="match_parent"
       android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
       android:layout_height="wrap_content"
       android:orientation="horizontal">


            <RadioButton
                android:layout_width="wrap_content"
                android:gravity="center"
                android:id="@+id/rad_show_day_leave"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>


       <TextView
           android:id="@+id/show_day_leave"
           android:layout_width="wrap_content"
           android:layout_marginLeft="@dimen/_2sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
           android:layout_height="wrap_content"
            android:textColor="@color/black"
           android:padding="@dimen/_2sdp"
           android:gravity="center"
            android:layout_marginRight="5dp"
           android:text="  Day Leave" />

   </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_gravity="left">

        <CheckBox
            android:layout_width="wrap_content"
            android:id="@+id/selectedAll_check"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/selectedAll"
            android:visibility="gone"
            android:layout_width="@dimen/_20sdp"
            android:gravity="center"
            android:background="@drawable/ic_baseline_check_box_outline_blank_24"
            android:layout_height="@dimen/_20sdp"
            android:textColor="@color/black"
            android:padding="@dimen/_3sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text=""></TextView>


        <TextView
            android:id="@+id/deleteselected"
            android:layout_width="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/deleteiiii"
            android:layout_height="@dimen/_16sdp"
            android:textColor="@color/white"
            android:padding="@dimen/_5sdp"
            android:visibility="gone"
            android:textSize="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_13sdp"
            android:text=""></TextView>
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycleleavebydate"
        android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycleleavebyday"
        android:visibility="gone"
        />


</LinearLayout>