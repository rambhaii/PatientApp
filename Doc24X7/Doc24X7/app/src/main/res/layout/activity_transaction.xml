<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashbord.ui.DoctorDetailActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>


    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_btn_bg_color"
            android:padding="@dimen/_3sdp"
            android:layout_below="@+id/Preciption_description"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"

                android:textStyle="bold"
                android:text="S.No  "/>

            <TextView
                android:id="@+id/medicineName"
                android:layout_width="0dp"
                android:text="Patient Detail"
                android:textSize="12sp"

                android:textStyle="bold"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/medicinedays"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text="Txn. Datails"

                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/medicineHowtouse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="12sp"

                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/a"
                android:layout_width="0dp"
                android:text="Status"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_height="match_parent"
                android:layout_weight=".5" />

        </LinearLayout>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rv_viewTansaction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>



    </LinearLayout>

</RelativeLayout>