<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/idCardView"
        card_view:cardElevation="@dimen/_3sdp"
        android:layout_margin="@dimen/_2sdp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_1sdp"
        card_view:cardCornerRadius="@dimen/_1sdp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_1sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:id="@+id/lay3"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginRight="5dp"
                        android:drawableTint="@color/back_bg"
                        android:drawablePadding="@dimen/_10sdp"
                        android:id="@+id/pickup_date"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile  :  "
                        android:textColor="#000000"
                        android:textSize="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mobile"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableTint="@color/colorPrimary"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_mobile"
                        android:text="5855855"
                        android:textColor="@color/red"
                        android:textSize="14dp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginRight="5dp"
                        android:drawableTint="@color/back_bg"
                        android:drawablePadding="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email  :  "
                        android:visibility="gone"
                        android:textColor="#000000"
                        android:textSize="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/email"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/green"

                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableTint="@color/colorPrimary"
                        android:drawableLeft="@drawable/ic_email_phone"
                        android:text="5855855"
                         android:textSize="12dp"/>


                </LinearLayout>



            </RelativeLayout>





            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginRight="5dp"
                    android:drawableTint="@color/back_bg"
                    android:drawablePadding="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor  :  "
                    android:textColor="#000000"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5855855"
                    android:textColor="#636060"
                    android:id="@+id/doctorname"
                    android:textSize="12dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginRight="5dp"
                    android:drawableTint="@color/back_bg"
                    android:drawablePadding="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specialities  :  "
                    android:textColor="#000000"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5855855"
                    android:textColor="#636060"
                    android:id="@+id/specialities"
                    android:textSize="12dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginRight="5dp"
                    android:drawableTint="@color/back_bg"
                    android:drawablePadding="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appointment Date  :  "
                    android:textColor="#000000"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5855855"
                    android:textColor="#636060"
                    android:id="@+id/appointment_date"
                    android:textSize="12dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginRight="5dp"
                    android:drawableTint="@color/back_bg"
                    android:drawablePadding="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appointment Time  :  "
                    android:textColor="#000000"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5855855"
                    android:textColor="#636060"
                    android:id="@+id/appointment_time"
                    android:textSize="12dp"/>


            </LinearLayout>





        </LinearLayout>






    </androidx.cardview.widget.CardView>



</LinearLayout>