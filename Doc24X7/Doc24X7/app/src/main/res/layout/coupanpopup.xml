<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:background="@drawable/white_circle"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/ic_perm_device_information_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/li"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:background="@drawable/rectnew">

            <TextView
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="Please Enter your registered Phone Number.."
                android:textSize="@dimen/_11sdp"
                android:gravity="center"
                android:id="@+id/textotp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coupon Apply"
                android:textStyle="bold"
                android:fontFamily="@font/proximanovaregular"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_coupan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 android:layout_below="@+id/toolbar"
                android:scrollbars="vertical" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                android:alpha="0.8">



                <Button
                    android:id="@+id/okButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_29sdp"
                    android:text="Ok"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/green"
                    android:background="@drawable/rect" />



            </RelativeLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/cancelimg"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
             android:layout_below="@+id/li"
            android:src="@drawable/ic_cancel_black_24dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/white"
             android:backgroundTint="@color/red"
            android:layout_marginLeft="@dimen/_5sdp"/>

    </RelativeLayout>

</RelativeLayout>