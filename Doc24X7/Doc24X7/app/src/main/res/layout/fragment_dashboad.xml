<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Dashbord.ui.DashboadFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <LinearLayout
           android:orientation="vertical"
           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <RelativeLayout
            android:id="@+id/detailuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="@dimen/_2sdp"
             android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="@dimen/_40sdp"
                android:id="@+id/piclayout"
                android:layout_margin="@dimen/_2sdp"
                android:layout_height="@dimen/_40sdp"
                app:srcCompat="@drawable/operator_circle"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/userpic"
                    android:layout_centerInParent="true"
                    android:src="@drawable/userprofiledash"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/black"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/massagebox"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/piclayout"
                android:layout_marginLeft="@dimen/_9sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_28sdp"
                    android:text="name name name name  "
                    android:id="@+id/name"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:gravity="left"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 85858588 "
                    android:id="@+id/contentnumber"

                    android:fontFamily="serif"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>



            <RelativeLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:id="@+id/massagebox"
                android:layout_margin="@dimen/_2sdp"
                android:layout_height="@dimen/_40sdp"
                app:srcCompat="@drawable/operator_circle">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/mascir"
                    android:layout_centerInParent="true"
                    android:src="@drawable/dashhhmail" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginRight="@dimen/_5sdp"
                android:id="@+id/Logout"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Logout  "
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:gravity="left"
                    android:textSize="@dimen/_11sdp" />


            </LinearLayout>

        </RelativeLayout>

           <ImageView
            android:layout_width="match_parent"
             android:layout_height="180dp"
            android:padding="@dimen/_10sdp"
            android:scaleType="fitXY"
             android:src="@drawable/bannerrrrr"></ImageView>

           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/updateQuaification"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Update Qualification"
                android:textColor="@color/white"
                android:padding="@dimen/_5sdp"
                android:gravity="center"
                android:layout_margin="@dimen/_3sdp"
                android:background="@drawable/corner_rec"
                android:textSize="@dimen/_13sdp"/>
            <TextView
                android:id="@+id/updateAccDetail"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Update Account Detail"
                android:layout_margin="@dimen/_3sdp"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/corner_rec"
                android:textSize="@dimen/_13sdp"/>
        </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_rec"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/_8sdp"
            android:layout_margin="@dimen/_8sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor App."
                android:textColor="@color/grey"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/pressed"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:id="@+id/doctorappointment"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/rect_dash"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                 android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="hfjdf"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor"
                    android:textSize="15sp"
                    android:textStyle="bold" />




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp"

                    android:background="@drawable/rectmore"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On"
                        android:textSize="@dimen/_11sdp"
                        android:id="@+id/tvonline"
                        android:textAlignment="center"
                        />
                    <Switch
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sw_status"

                        />

                </LinearLayout>


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_30sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/textcolor"
                    android:fontFamily="@font/apple_sd_gothic_neo_light"
                    android:textSize="@dimen/_14sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/PatientAppointment_li"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online Appointment   :    "
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/PatientAppointment"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorPrimary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/PatientAppointment_offline_li"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On Clinic Appointment   :    "
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"

                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/_10sdp"
                        android:id="@+id/PatientAppointment_offline"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="@color/blackdask"
                       />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/lohoyint"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_height="1dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/textcolor"
                    android:fontFamily="@font/apple_sd_gothic_neo_light"
                    android:textSize="@dimen/_14sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/due_value_li"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due Appointment   :    "
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="@dimen/_8sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/due_value"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorPrimary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/upcomming_appointment_value_li"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upcoming Appointment   :    "
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/upcomming_appointment_value"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/lohoyint"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_height="1dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Patient"
                    android:textStyle="bold"
                    android:textColor="@color/textcolor"
                    android:textAllCaps="true"
                    android:fontFamily="@font/apple_sd_gothic_neo_light"
                    android:textSize="@dimen/_14sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/validityvalue_li"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patient Under Validity  :    "
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/validityvalue"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TotalPatient_li"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Patient   :    "
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:id="@+id/TotalPatient"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="@color/colorPrimary"

                        android:textSize="@dimen/_10sdp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/lohoyint"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/income_li"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:elevation="@dimen/_2sdp"
                    android:layout_margin="@dimen/_2sdp">

                    <TextView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:text="My \nIncome"
                        android:textAllCaps="true"
                        android:fontFamily="@font/apple_sd_gothic_neo_light"
                        android:textColor="@color/black"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/income"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="200000000"
                        android:fontFamily="@font/apple_sd_gothic_neo_light"
                        android:textColor="@color/textcolor"
                        android:textSize="17sp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/im"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_95sdp"
            android:src="@drawable/todaydash" />
        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_below="@+id/im"
            android:id="@+id/mii"
            android:layout_marginTop="@dimen/_42sdp"
            android:src="@drawable/todaydueappli"
            android:layout_height="@dimen/_40sdp"/>

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_below="@+id/mii"
            android:layout_marginTop="@dimen/_35sdp"
            android:src="@drawable/patientuser"
            android:layout_height="@dimen/_40sdp"/>



    </RelativeLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:weightSum="2">


    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:weightSum="2">

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/white_rec"
            android:id="@+id/comission_li"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:elevation="@dimen/_2sdp"
            android:layout_margin="@dimen/_8sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Comission"
                android:textColor="@color/grey"
                android:textSize="@dimen/_13sdp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:id="@+id/comission"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

    </LinearLayout>

   </ScrollView>

</FrameLayout>