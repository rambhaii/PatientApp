<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:background="@drawable/backgrcmkhcj"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="90dp"
                    android:id="@+id/userEditProfile"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="90dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/customerimage"
                        android:layout_width="120dp"
                         android:layout_height="120dp"
                        android:src="@drawable/customer_support"
                        app:civ_border_color="@color/back_bg"
                        app:civ_border_width="1dp"/>

                    <ImageView
                        android:id="@+id/edit_plus"
                        android:layout_width="@dimen/_15sdp"
                        android:src="@drawable/ic_plus_sign"
                        android:tint="@color/white"
                        android:padding="@dimen/_4sdp"
                        android:background="@drawable/white_circle"
                        android:backgroundTint="@color/red"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"/>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="8dp"
                         android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginRight="5dp"
                            android:drawableTint="@color/back_bg"
                            android:drawablePadding="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name  :  "
                            android:visibility="gone"
                            android:textColor="#000000"
                            android:textSize="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NameNameNameNa eName"
                            android:textColor="@color/white"
                             android:id="@+id/Name"
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:textSize="16dp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginRight="5dp"
                            android:drawableTint="@color/back_bg"
                            android:drawablePadding="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email  :  "
                            android:textColor="#000000"
                            android:textSize="15dp"/>




                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginRight="5dp"
                            android:drawableTint="@color/back_bg"
                            android:drawablePadding="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone No.  :  "
                            android:textColor="#000000"
                            android:textSize="15dp"/>




                    </LinearLayout>



                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_marginRight="5dp"
                    android:drawableTint="@color/colorPrimary"
                    android:drawablePadding="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                     android:layout_marginTop="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:text="Name "
                    android:id="@+id/name"
                    android:drawableLeft="@drawable/customer_support"
                    android:textColor="@color/black"
                    android:textSize="14dp"/>

  <TextView
                    android:layout_marginRight="5dp"
                    android:drawableTint="@color/colorPrimary"
                    android:drawablePadding="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                     android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:text="Name "
                    android:id="@+id/email"
                    android:drawableLeft="@drawable/ic_email_phone"
                    android:textColor="@color/black"
                    android:textSize="14dp"/>


                <TextView
                    android:layout_marginRight="5dp"
                     android:drawableTint="@color/colorPrimary"
                    android:drawablePadding="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                     android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:text="9898989898"
                    android:id="@+id/Phoneno"
                    android:drawableLeft="@drawable/ic_mobile"
                    android:textColor="@color/black"
                    android:textSize="14dp"/>





            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/li_payment"
                        android:background="@drawable/rect"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                           android:src="@drawable/ic_wallet" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:id="@+id/EditProfile"
                            android:layout_height="wrap_content"
                            android:drawableTint="@color/back_bg"
                            android:text="Payment" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_2sdp"
                         android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/rect"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                           android:src="@drawable/ic_user_profiles"
                            />


                        <androidx.appcompat.widget.AppCompatTextView
                             android:layout_gravity="center"
                             android:gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                              android:drawableTint="@color/back_bg"
                            android:text="Edit Profile" />

                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/aboutus"
                        android:background="@drawable/rect"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                           android:src="@drawable/ic_create_new_folder_black_24dp"
                            />


                        <androidx.appcompat.widget.AppCompatTextView
                             android:layout_gravity="center"
                             android:gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                              android:drawableTint="@color/back_bg"
                            android:text="About Us" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_2sdp"
                         android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/rect"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                           android:src="@drawable/ic_security_black_24dp"
                            />


                        <androidx.appcompat.widget.AppCompatTextView
                             android:layout_gravity="center"
                             android:gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                              android:drawableTint="@color/back_bg"
                            android:text="Contact Us"  />

                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/Privacypolicy"
                        android:background="@drawable/rect"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_sheet"
                            />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableTint="@color/back_bg"
                            android:text="Privacy Policy"  />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                         android:background="@drawable/rect"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                           android:src="@drawable/ic_logout" />


                        <androidx.appcompat.widget.AppCompatTextView
                             android:layout_gravity="center"
                             android:gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                              android:drawableTint="@color/back_bg"
                            android:text="Logout" />

                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </ScrollView>



    <LinearLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
         android:layout_marginLeft="@dimen/_2sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/logout"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/rectmore"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/ic_logout" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTint="@color/back_bg"
            android:gravity="center"
            android:text="@string/logout"
            android:textColor="@color/white" />

    </LinearLayout>




</RelativeLayout>