<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:background="@drawable/rectbacknew"
    android:elevation="1dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            android:id="@+id/idCardView"
            android:layout_margin="@dimen/_1sdp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_marginRight="5dp"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_10sdp"
                    android:drawableTint="@color/colorPrimary"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:id="@+id/tv_title"
                    android:drawableLeft="@drawable/customer_support"
                    android:text="XXSXSSCSCSC "
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"/>


                <TextView

                    android:id="@+id/tv_discuraption"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:text="hhhhhh"

                    android:fontFamily="@font/proximanovaregular"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textColor="@color/red"
                    android:textSize="14dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:drawableLeft="@drawable/ic_baseline_date_range_24"
                        android:layout_marginRight="5dp"
                        android:drawableTint="@color/back_bg"
                        android:drawablePadding="@dimen/_10sdp"
                        android:id="@+id/craetedate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08/05/18 4:31 PM"
                        android:textColor="#000000"
                        android:textSize="15dp"/>




                    <TextView
                        android:id="@+id/enddate"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@drawable/ic_baseline_date_range_24"
                        android:layout_marginRight="5dp"
                        android:drawableTint="@color/back_bg"
                        android:drawablePadding="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08/05/18 4:31 PM"
                        android:textColor="#000000"
                        android:textSize="15dp"/>



                </RelativeLayout>



                <TextView
                    android:id="@+id/book_date"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:text="5858558585855855855"
                    android:fontFamily="@font/proximanovaregular"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14dp"/>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:paddingRight="@dimen/_3sdp"
                        android:maxLines="2"
                        android:background="@drawable/rect_blue"
                        android:text="  Reschedule  "
                        android:layout_gravity="right"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:fontFamily="@font/proximanovaregular"
                       android:id="@+id/reschedule"
                        android:textSize="17dp"/>



                    <TextView
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:id="@+id/View_Preciption"
                        android:drawableLeft="@drawable/ic_baseline_preview_24"
                        android:drawableTint="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_3sdp"

                        android:padding="@dimen/_5sdp"
                        android:paddingRight="@dimen/_3sdp"
                        android:maxLines="2"
                        android:text="  Canceled "
                        android:layout_gravity="right"
                        android:gravity="center_vertical"
                        android:textColor="#851616"
                        android:fontFamily="@font/proximanovaregular"
                        android:textSize="17dp"/>


                </RelativeLayout>






            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>>


</LinearLayout>