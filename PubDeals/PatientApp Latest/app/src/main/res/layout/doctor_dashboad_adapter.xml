<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lifirst"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"

        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_70sdp"
                android:padding="@dimen/_10sdp"
                android:id="@+id/opImage"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/customer_support"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.4"
                        android:text="Dr. John Riley"
                        android:id="@+id/name"
                        android:singleLine="true"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:fontFamily="@font/proximanovaregular"
                        android:gravity="left"
                        android:textSize="@dimen/_13sdp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Dr. John Riley"
                        android:id="@+id/docid"
                        android:layout_weight="1.6"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:fontFamily="@font/proximanovaregular"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="service_name"
                    android:id="@+id/specialities"
                    android:visibility="gone"
                    android:singleLine="true"
                    android:drawablePadding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="left"
                    android:textSize="@dimen/_12sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/qualification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:fontFamily="@font/proximanovaregular"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="service_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:id="@+id/expwrence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/qualification"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/proximanovaregular"
                        android:gravity="left"
                        android:maxLines="3"
                        android:text="Lorem ipsum dolor sit amet,"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/expwrence"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/proximanovaregular"
                        android:gravity="left"
                        android:maxLines="3"
                        android:text="Lorem ipsum dolor sit amet,"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp" />

                </RelativeLayout>



            </LinearLayout>


        </LinearLayout>





        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\u20B9 300 consultation fees"
            android:id="@+id/consultation"
            android:singleLine="true"
            android:textColor="@color/black"
            android:paddingLeft="12sp"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="left"
            android:textSize="@dimen/_10sdp" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\u20B9 300 consultation fees"
            android:id="@+id/clinic_fees"
            android:singleLine="true"
            android:textColor="@color/black"
            android:paddingLeft="12sp"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="left"
            android:textSize="@dimen/_10sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/id_chatnow"
                style="@android:style/Widget.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_28sdp"
                android:background="@drawable/rectnew"
                android:backgroundTint="@color/green"
                android:text="Chat"
                android:visibility="gone"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/proximanovaregular"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/daynext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_2sdp"
                android:paddingTop="@dimen/_5sdp"
                android:text="igdfgfdgfgd"
                android:textColor="@color/green"
                android:textSize="@dimen/_8sdp" />
            <TextView
                android:id="@+id/doctorsid"
                android:layout_below="@+id/daynext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="id"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
               />
            <Button
                android:id="@+id/idCardView"
                android:layout_alignParentRight="true"
                style="@android:style/Widget.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_28sdp"
                android:background="@drawable/rectnew"
                android:text="@string/bookappointment"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/proximanovaregular"
                android:backgroundTint="@color/button_color"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />



        </RelativeLayout>






    </LinearLayout>





</LinearLayout>