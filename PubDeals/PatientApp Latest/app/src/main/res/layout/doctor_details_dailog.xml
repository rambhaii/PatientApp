<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

        <!--Any child View here, TabLayout for example. This View will NOT be blurred -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_30sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="@dimen/_10sdp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:shadowColor="#F0F6F5FA"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="6"
                    android:singleLine="true"
                    android:text="Doctor Details"
                    android:textColor="#070FAA"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />

                <ImageView

                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_cancel_black_24dp" />


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_20sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingBottom="@dimen/_20sdp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:id="@+id/cardimg"
                    android:background="@drawable/circular_shadow"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:elevation="15dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/opImage"
                        android:scaleType="fitXY"/>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_28sdp"
                        android:fontFamily="@font/proximanovaregular"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="Dr. Martin Pilier"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/specialities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/proximanovaregular"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="service_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/qualification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/proximanovaregular"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="service_name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/clinic_fees"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/qualification"
                            android:drawableTint="@color/light_grey"
                            android:fontFamily="@font/proximanovaregular"
                            android:gravity="left|top"
                            android:maxLines="3"
                            android:text="Lorem "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/exprieance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/clinic_fees"
                            android:drawableTint="@color/light_grey"
                            android:fontFamily="@font/proximanovaregular"
                            android:gravity="left|top"
                            android:maxLines="3"
                            android:text="Lorem "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address"
                    android:drawableTint="@color/light_grey"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="left|top"
                    android:maxLines="3"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Address "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />
                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/light_grey"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="left|top"
                    android:maxLines="10"
                    android:textStyle="normal"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:text="Description "
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="vertical">
                    <ProgressBar
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       android:visibility="gone"
                       android:id="@+id/progress"
                        />
                <Button
                    android:id="@+id/bookappointment"
                    android:background="@drawable/appthemborder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:shadowColor="@color/red"

                    android:outlineAmbientShadowColor="@color/red"
                    android:outlineSpotShadowColor="@color/red"
                    android:textSize="@dimen/_13sdp"
                    android:text="@string/consult_now"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address"
                    android:drawableTint="@color/light_grey"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="left|top"
                    android:maxLines="3"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Description "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />
                <TextView
                    android:id="@+id/consultfor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:drawableTint="@color/light_grey"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="left|top"
                    android:maxLines="10"
                    android:textStyle="normal"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:text="Description "
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>
        </LinearLayout>

</RelativeLayout>
