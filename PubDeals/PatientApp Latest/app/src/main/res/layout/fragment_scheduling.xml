<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.doc24x7.DoctorDashboad.SchedulingFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
        >

       <RelativeLayout
           android:id="@+id/detailuser"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center_vertical">

           <RelativeLayout
               android:layout_width="@dimen/_40sdp"
               android:id="@+id/piclayout"
               android:layout_margin="@dimen/_2sdp"
               android:layout_height="@dimen/_40sdp"
               app:srcCompat="@drawable/operator_circle"
               >

               <de.hdodenhof.circleimageview.CircleImageView
                   xmlns:app="http://schemas.android.com/apk/res-auto"
                   android:layout_width="@dimen/_30sdp"
                   android:layout_height="@dimen/_30sdp"
                   android:layout_centerHorizontal="true"
                   android:layout_centerVertical="true"
                   android:id="@+id/userpic"
                   android:layout_centerInParent="true"
                   android:src="@drawable/customer_support"
                   app:civ_border_width="1dp"
                   app:civ_border_color="@color/black"/>

           </RelativeLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_centerInParent="true"
               android:layout_toLeftOf="@+id/Logout"
               android:layout_marginRight="@dimen/_10sdp"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@+id/piclayout"
               android:layout_marginLeft="@dimen/_9sdp"
               android:orientation="vertical">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="@dimen/_28sdp"
                   android:text="name name name name  "
                   android:id="@+id/name"
                   android:singleLine="true"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:fontFamily="serif"
                   android:gravity="left"
                   android:textSize="@dimen/_11sdp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=" 85858588 "
                   android:id="@+id/contentnumber"
                   android:textColor="@color/black"
                   android:fontFamily="serif"
                   android:gravity="left"
                   android:layout_marginTop="@dimen/_2sdp"
                   android:textSize="@dimen/_9sdp" />

           </LinearLayout>


           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:layout_marginRight="@dimen/_5sdp"
               android:id="@+id/Logout"
               android:layout_centerInParent="true"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="  Logout  "
                   android:singleLine="true"
                   android:textColor="@color/red"
                   android:textStyle="bold"
                   android:fontFamily="serif"
                   android:gravity="left"
                   android:textSize="@dimen/_11sdp" />


           </LinearLayout>

       </RelativeLayout>

           <LinearLayout
               android:layout_below="@+id/detailuser"
               android:layout_marginTop="@dimen/_5sdp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/toolbar"
                   android:layout_margin="@dimen/_8sdp"
                   android:orientation="vertical">


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_below="@+id/toolbar"
                       android:layout_height="wrap_content"
                       android:background="@drawable/rect"
                       android:padding="@dimen/_5sdp"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_marginRight="5dp"
                       android:orientation="horizontal">



                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_weight="1"
                           android:layout_marginRight="@dimen/_5sdp"
                           android:layout_height="wrap_content">

                           <EditText
                               android:id="@+id/selectdate"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:background="@null"
                               android:drawableTint="@color/light_grey"
                               android:drawableLeft="@drawable/ic_baseline_date_range_24"
                               android:drawablePadding="@dimen/_10sdp"
                               android:focusable="false"
                               android:hint="Select Date"
                               android:fontFamily="@font/proximanovaregular"
                               android:inputType="number"
                               android:paddingLeft="16.3dp"
                               android:paddingTop="9.7dp"
                               android:paddingRight="@dimen/_10sdp"
                               android:paddingBottom="9.7dp"
                               android:singleLine="true"
                               android:textColor="@color/colorPrimary"
                               android:textColorHint="@color/colorPrimary"
                               android:textSize="15dp"
                               android:textStyle="normal" />

                       </LinearLayout>



                   </LinearLayout>


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_below="@+id/toolbar"
                       android:layout_height="wrap_content"
                       android:background="@drawable/rect"
                       android:padding="@dimen/_5sdp"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_marginRight="5dp"
                       android:orientation="horizontal">



                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_weight="1"
                           android:layout_marginRight="@dimen/_5sdp"
                           android:layout_height="wrap_content"
                           >

                           <EditText
                               android:id="@+id/starttime"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:background="@null"
                               android:drawableTint="@color/light_grey"
                               android:drawableLeft="@drawable/ic_baseline_watch_later_24"
                               android:drawablePadding="@dimen/_10sdp"
                               android:focusable="false"
                               android:hint="Start Time"
                               android:fontFamily="@font/proximanovaregular"
                               android:inputType="number"
                               android:paddingLeft="16.3dp"
                               android:paddingTop="9.7dp"
                               android:paddingRight="@dimen/_10sdp"
                               android:paddingBottom="9.7dp"
                               android:singleLine="true"
                               android:textColor="@color/colorPrimary"
                               android:textColorHint="@color/colorPrimary"
                               android:textSize="15dp"
                               android:textStyle="normal" />

                       </LinearLayout>


                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="@dimen/_5sdp"
                           android:orientation="vertical"
                           android:layout_weight="1"
                           >

                           <EditText
                               android:id="@+id/endtime"
                               android:drawableLeft="@drawable/ic_baseline_watch_later_24"
                               android:drawablePadding="@dimen/_10sdp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:drawableTint="@color/light_grey"

                               android:background="@null"
                               android:focusable="false"
                               android:hint="End Time"
                               android:fontFamily="@font/proximanovaregular"
                               android:inputType="number"
                               android:paddingLeft="16.3dp"
                               android:paddingTop="9.7dp"
                               android:paddingRight="@dimen/_10sdp"
                               android:paddingBottom="9.7dp"
                               android:singleLine="true"
                               android:textColor="@color/colorPrimary"
                               android:textColorHint="@color/colorPrimary"
                               android:textSize="15dp"
                               android:textStyle="normal" />

                       </LinearLayout>





                   </LinearLayout>









               </LinearLayout>








           </LinearLayout>



       <Button
           android:id="@+id/bt_Submit"
           style="@android:style/Widget.Button.Small"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/_15sdp"
           android:layout_marginRight="@dimen/_15sdp"
           android:background="@drawable/rectnew"
           android:backgroundTint="@color/button_color"
           android:text="Submit"
           android:layout_alignParentBottom="true"
           android:layout_centerInParent="true"
           android:paddingLeft="@dimen/_20sdp"
           android:paddingRight="@dimen/_20sdp"
           android:layout_gravity="center"
           android:layout_marginTop="@dimen/_15sdp"
           android:layout_marginBottom="@dimen/_30sdp"
           android:fontFamily="@font/proximanovaregular"
           android:textColor="@color/white"
           android:textSize="18sp" />




   </RelativeLayout>









</FrameLayout>