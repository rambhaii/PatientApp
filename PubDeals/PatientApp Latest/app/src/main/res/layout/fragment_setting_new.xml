<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.doc24x7.Dashbord.ui.SettingNewFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">


      <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res-auto"
          xmlns:tools="http://schemas.android.com/tools"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          tools:context="com.example.chandan.curvedlayout.MainActivity">

          <RelativeLayout
              android:id="@+id/background"
              android:layout_width="match_parent"
              android:layout_height="300dp"
              android:background="@drawable/sample" />

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/background"
              android:layout_marginStart="20dp"
              android:layout_marginTop="-100dp">

              <com.mikhaellopez.circularimageview.CircularImageView
                  android:layout_width="150dp"
                  android:layout_height="150dp"
                  android:src="@drawable/customer_support"
                  app:civ_border_color="#BCffffff"
                  app:civ_border_width="10dp" />

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginStart="12dp"
                  android:layout_marginEnd="12dp"
                  android:layout_marginBottom="24dp"
                  android:layout_gravity="bottom">

                  <TextView
                      android:layout_width="wrap_content"
                      android:id="@+id/Name"
                      android:layout_marginTop="@dimen/_2sdp"
                      android:layout_height="wrap_content"
                      android:fontFamily="sans-serif-light"
                      android:text="CHANDAN BHANDARI"
                      android:textSize="18sp"
                      android:textColor="@android:color/black"/>

                  <TextView
                      android:layout_width="match_parent"
                      android:id="@+id/Phoneno"
                      android:layout_height="wrap_content"
                      android:fontFamily="sans-serif-light"
                      android:text="Sofware Engineer"
                      android:gravity="center_horizontal"
                      android:textSize="12sp"/>

                  <TextView
                      android:layout_width="match_parent"
                      android:id="@+id/email"
                      android:layout_height="wrap_content"
                      android:fontFamily="sans-serif-light"
                      android:text="Sofware Engineer"
                      android:gravity="center_horizontal"
                      android:textSize="12sp"/>


                  <TextView
                      android:layout_width="match_parent"
                      android:id="@+id/address_tv"
                      android:layout_height="wrap_content"
                      android:fontFamily="sans-serif-light"
                      android:text="Sofware Engineer"
                      android:gravity="center_horizontal"
                      android:textSize="12sp"/>




              </LinearLayout>
          </LinearLayout>


      </RelativeLayout>


  </LinearLayout>

</FrameLayout>