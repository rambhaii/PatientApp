<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:background="@drawable/rectbacknew"
    android:elevation="1dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/idCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/customer_support"
                    android:drawablePadding="@dimen/_10sdp"
                    android:drawableTint="@color/colorPrimary"
                    android:gravity="left"
                    android:text="XXSXSSCSCSC "
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_discuraption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:text="5858558585855855855"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/patientdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:drawableLeft="@drawable/customer_support"
                    android:drawablePadding="@dimen/_10sdp"
                    android:maxLines="2"
                    android:text="Patient name"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">


                    <TextView
                        android:id="@+id/craetedate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:drawableLeft="@drawable/ic_baseline_date_range_24"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/back_bg"
                        android:text="08/05/18 4:31 PM"
                        android:textColor="#000000"
                        android:textSize="15dp" />


                    <TextView
                        android:id="@+id/enddate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:drawableLeft="@drawable/ic_baseline_date_range_24"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/back_bg"
                        android:text="08/05/18 4:31 PM"
                        android:textColor="#000000"
                        android:textSize="15dp" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/emergency_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:text="Emergency Time"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/book_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:text="5858558585855855855"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/consult_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:text="5858558585855855855"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/appointment_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:text="5858558585855855855"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/proximanovaregular"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:padding="@dimen/_5sdp"
                        android:paddingRight="@dimen/_3sdp"
                        android:text="Prescription  "
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/chat"
                        android:layout_width="@dimen/_33sdp"
                        android:layout_height="@dimen/_33sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/ic_chatic"
                        android:backgroundTint="@color/agora_blue"
                        android:drawableLeft="@drawable/ic_baseline_chat_bubble_outline_24"
                        android:drawablePadding="@dimen/_2sdp"
                        android:drawableTint="@color/black"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/View_Preciption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/rect_corner"
                        android:drawableLeft="@drawable/ic_baseline_preview_24"
                        android:drawableTint="@color/colorPrimary"
                        android:fontFamily="@font/proximanovaregular"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:padding="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingRight="@dimen/_3sdp"
                        android:text="  Prescription  "
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:visibility="visible" />


                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_Preciption"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/checkoutlayout"
                    android:layout_below="@+id/toolbar"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:nestedScrollingEnabled="false"
                    android:padding="@dimen/_5sdp"
                    android:scrollbars="vertical"
                    android:visibility="gone"
                    tools:context="example.javatpoint.com.recyclerviewlist.MainActivity" />


            </LinearLayout>


        </RelativeLayout>


        <TextView
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:text=""
            android:fontFamily="@font/proximanovaregular"
            android:layout_gravity="left"
            android:gravity="right"
            android:background="@drawable/gradient"
            android:layout_below="@id/idCardView"
            android:padding="10dp"
            android:textColor="@color/whitep"
            android:textSize="12dp"/>
        <TextView
             android:visibility="gone"
             android:layout_marginTop="@dimen/_5sdp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="@dimen/_3sdp"
             android:paddingRight="@dimen/_3sdp"
             android:layout_alignParentRight="true"
             android:text=""
             android:fontFamily="@font/proximanovaregular"
             android:layout_gravity="left"
             android:gravity="right"
             android:background="@drawable/gradient"
             android:layout_below="@id/idCardView"
             android:padding="10dp"
             android:textColor="@color/whitep"
             android:textSize="12dp"/>

        <ImageView
            android:id="@+id/reUploadReport"
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_33sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/ic_link"
            android:drawableTint="@color/black"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="center_vertical"
            android:padding="@dimen/_5sdp"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:text=" Upload Report "
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="visible" />
    </RelativeLayout>



</LinearLayout>